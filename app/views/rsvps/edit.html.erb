<h1>Editing rsvp</h1>

<% form_for(@rsvp) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :shirt_size %><br />
    <%= f.text_field :shirt_size %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :section %><br />
    <%= f.text_field :section %>
  </p>
  <p>
    <%= f.label :event %><br />
    <%= f.text_field :event %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @rsvp %> |
<%= link_to 'Back', rsvps_path %>