<h1>Listing rsvps</h1>

<table>
  <tr>
    <th>Shirt size</th>
    <th>User</th>
    <th>Section</th>
    <th>Event</th>
  </tr>

<% @rsvps.each do |rsvp| %>
  <tr>
    <td><%=h rsvp.shirt_size %></td>
    <td><%=h rsvp.user %></td>
    <td><%=h rsvp.section %></td>
    <td><%=h rsvp.event %></td>
    <td><%= link_to 'Show', rsvp %></td>
    <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
    <td><%= link_to 'Destroy', rsvp, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New rsvp', new_rsvp_path %>